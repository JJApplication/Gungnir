<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;700&display=swap" rel="stylesheet">
    <title>Gungnir</title>
</head>
<style>
    * {
        font-family: 'Open Sans', sans-serif;
    }
    .wrapper {
        max-width: 960px;
        margin: 0 auto;
        padding: 2rem 1rem;
    }
    .wrapper .head h1 {
        margin-top: 0;
        margin-bottom: 0.5rem;
    }
    .wrapper .head h1 a {
        color: #000;
    }
    .wrapper .head {
        margin-bottom: 1.5rem;
    }
    a {
        color: #6b41ff;
        text-decoration: none;
    }
    a:hover {
        text-decoration: underline;
    }
    .file {
        padding: 2rem 0;
    }
    .file-nav {
        font-size: 0;
        margin-bottom: 2.5rem;
    }
    .file-nav-head {
        background-color: #e3395e;
        color: #FFFFFF;
        font-size: 1rem;
        padding: 0.25rem 1rem;
    }
    .file-nav-body {
        font-size: 1rem;
        background-color: #F0F0F0;
        color: #222222;
        padding: 0.25rem 1rem;
        word-break: break-all;
    }
    .file-info {

    }
    .file-info-body {
        font-size: 0;
    }
    .file-info-pre {
        width: 8rem;
        display: inline-block;
        padding: 0.5rem;
        background-color: #1C1F2B;
        color: #FFFFFF;
        font-size: 0.95rem;
        overflow: hidden;
    }
    .file-info-val {
        display: inline-block;
        width: calc(100% - 12rem);
        padding: 0.5rem 1rem;
        background-color: #F0F0F0;
        color: #222222;
        font-size: 0.95rem;
        border-bottom: 1px solid #E0E0E0;
        text-overflow: ellipsis;
        overflow: hidden;
        white-space: nowrap;
    }
    .download {
        background-color: #e3395e;
        color: #FFFFFF;
        border-radius: 0.25rem;
        display: inline-block;
        width: auto;
        padding: 0 0.5rem;
    }
</style>
<body>
    <div class="wrapper">
        <div class="head">
            <h1><a href="/">Gungnir</a></h1>
            <p>Fast File Server by <a href="https://github.com/JJApplication">JJApplication</a></p>
            {{ if .EnableUpload }}
                <input type="text" placeholder="token" id="token">
                <input type="file" onchange="uploadFile(event)" id="file">
            {{ end }}
        </div>
        <div class="file">
            <div class="file-nav">
                <span class="file-nav-head">~</span>
                <span class="file-nav-body">{{ .FileUrl }}</span>
            </div>
            <div class="file-info">
                <p class="file-info-body">
                    <span class="file-info-pre">File Name</span>
                    <span class="file-info-val">{{ .FileName }}</span>
                </p>
                <p class="file-info-body">
                    <span class="file-info-pre">File Extension</span>
                    <span class="file-info-val">{{ .Ext }}</span>
                </p>
                <p class="file-info-body">
                    <span class="file-info-pre">File Size</span>
                    <span class="file-info-val">{{ .Size }}</span>
                </p>
                <p class="file-info-body">
                    <span class="file-info-pre">File ModifyTime</span>
                    <span class="file-info-val">{{ .ModTime }}</span>
                </p>
                <p class="file-info-body">
                    <span class="file-info-pre">File Link</span>
                    <span class="file-info-val"><a class="download" href={{ .FileUrl }}>download</a></span>
                </p>
                <p class="file-info-body">
                    <span class="file-info-pre">Download Counts</span>
                    <span class="file-info-val">{{ .Counts }}</span>
                </p>
            </div>
        </div>
    </div>
<script type="text/javascript">
        function uploadFile(e) {
            const token = document.getElementById("token");
            // auth first
            fetch('/auth', {
                method: 'POST',
                body: JSON.stringify({token: token.value})
            })
                .then(res => {
                    if (res.status === 200) {
                        console.log('upload file: ' + e.target.files[0].name)
                        const form = new FormData();
                        if (!e.target.files || e.target.files.length === 0) {
                            alert('file list is empty');
                            return
                        }
                        form.append('file', e.target.files[0]);
                        fetch('/upload', {
                            method: 'POST',
                            mode: 'cors',
                            body: form
                        })
                            .then(res => {
                                if (res.status === 200) {
                                    alert('upload success');
                                } else {
                                    alert('upload failed');
                                }
                            })
                    } else {
                        alert('token auth failed');
                    }
                })
        }
    </script>
</body>
</html>